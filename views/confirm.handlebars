	<div class="container">
		{{#if isScheduled}}
			<div id="modal-dialog" class="modal show">
			    <div class="modal-dialog">
			      <div class="modal-content">
			        <div class="modal-header">
			            <!-- <a href="confirm/{{id}}" data-dismiss="modal" aria-hidden="true" class="close">×</a> -->
			             <h3>Event Scheduled</h3>
			        </div>
			        <div class="modal-body">
			             <p>You have scheduled your event! The time you selected will be added to yours and all participants' Google calendars.</p>
			        </div>
			        <div class="modal-footer">
			          <a href="/view"  id="btnConfirm" class="btn confirm">OK</a> 
