     			<input id="inlineradio1" name="sampleinlineradio" type="checkbox" value="option1">Morning
     		</label>
    		<label class="radio-inline">
     			<input id="inlineradio2" name="sampleinlineradio" type="checkbox" value="option2">Afternoon
     		</label>
    		<label class="radio-inline">
     			<input id="inlineradio3" name="sampleinlineradio" type="checkbox" value="option3">Evening
    		</label>
   		</form>



	
		






