<body>
		<div class="table">
		    <div class="tr">
		        <div class="d1">
		        	<span class="btn-group">
						<a href="/">
							<button type="button" class="btn btn-default">
								<span class="glyphicon glyphicon-arrow-left"></span>
							</button>
						</a>
					</span>
		        </div>
		        <div class="d2">	
					<span class="header">
						<span class="btn-group">Create Event</span>
					</span>
		        </div>
		        <div class="d3"></div>
		    </div>
		</div>


	<div class="container">
		<form id="createEventForm" role="form" method="get" action="/add" onsubmit="return validateForm()">
			<div class="form-group">
				<label>Event name:</label>
				<input type="text" class="form-control" class="top-buffer" placeholder="Event Name" name="name"><div>
			</div>
			<div class="form-group">
				<label>Emails of all guests:</label>
				<input type="text" class="form-control" class="top-buffer" placeholder="Enter addresses separated by commas" name="attendees"  autocapitalize="off"><div>
			</div>
			<div class="form-group">
				<label>Location:</label>
				<input type="text" class="form-control" class="top-buffer" placeholder="Location" name="location"><div>
			</div>
			<div class="form-group">
				<label>Duration of event:</label>
				<!-- <input type="number" class="form-control" class = "top-buffer" placeholder="Duration in hours" name="duration"><div> -->
				<div class="table">
				    <div class="tr">
				        <div class="d6">
				        	<span>
								<select class="form-control top-buffer" id="hrs" name="hrs">
								</select>
							</span>
				        </div>
				        <div class="d7">	
							<select class="form-control top-buffer" id="mins" name="mins">
								<option value="0">0 minutes</option>
								<option value="15">15 minutes</option>
								<option value="30">30 minutes</option>
								<option value="45">45 minutes</option>
							</select>
				        </div>
				    </div>
				</div>
			</div>

			<div class="center-block">
				<strong>Times event can occur:</strong>
			</div>
			<div class="center-block">
	    		<label class="radio-inline">
	     			<input type="checkbox" name="morning">Morning
	     		</label>
	    		<label class="radio-inline">
	     			<input type="checkbox" name="afternoon">Afternoon
	     		</label>
	    		<label class="radio-inline">
	     			<input type="checkbox" name="evening">Evening
	    		</label>
	    	</div>
	    	<div class="center-block">
		   		<input type="submit" id="submitBtn" class="btn btn-primary" value="Confirm"></input>
	   		</div>
	   	</form>
	</div>
